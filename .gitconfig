[user]
	name = Addison Hernandez
	email = addison.hernandez@gmail.com
[core]
	editor = vim
	autocrlf = input
	safecrlf = true
	excludesfile = /home/addison/.gitignore_global
[help]
	autocorrect = 50
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
	dump = cat-file -p
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager-core
	credentialStore = gpg
[credential "https://dev.azure.com"]
	useHttpPath = true
[init]
	defaultBranch = main
